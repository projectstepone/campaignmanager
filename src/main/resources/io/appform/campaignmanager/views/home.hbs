{{#partial "content"}}
    <section class="container-fluid">
        <div class="row cm-first-row">
            <div class="col-sm-8 offset-sm-2">
                <ul class="nav nav-tabs" id="forms-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="sms-tab" data-toggle="tab" href="#sms" role="tab" aria-controls="sms" aria-selected="true">SMS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="ivr-tab" data-toggle="tab" href="#ivr" role="tab" aria-controls="ivr" aria-selected="false">IVR</a>
                    </li>
                </ul>
                <div class="tab-content" id="forms-tabContent" style="padding-top: 1rem">
                    <div class="tab-pane fade show active" id="sms" role="tabpanel" aria-labelledby="sms-tab">
                        <form enctype="multipart/form-data" method="post" action="/create/sms"
                              data-cnf-title="Start Campaign"
                              data-cnf-text="Are you sure that you want to start a new campaign?">
                            <div class="form-group row">
                                <label for="smsContent" class="col-sm-2 col-form-label">SMS Content</label>
                                <div class="col-sm-10">
                                <textarea class="form-control cm-text-box" id="smsContent" name="smsContent"
                                          placeholder="SMS to be sent" required></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="smsTemplateId" class="col-sm-2 col-form-label">SMS Template ID</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control cm-text-box" id="smsTemplateId" name="smsTemplateId"
                                           placeholder="Registered template ID" maxlength="255" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="smsFile" class="col-sm-2 col-form-label">Recipients List</label>
                                <div class="col-sm-4">
                                    <input type="file" class="form-control-file" id="smsFile" name="smsFile" required>
                                </div>
                                <label for="smsSender" class="col-sm-2 col-form-label">Sender</label>
                                <div class="col-sm-4">
                                    <select name="smsSender" class="form-control" id="smsSender" required>
                                        {{#each senders}}
                                            <option value="{{this}}">{{this}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="ivr" role="tabpanel" aria-labelledby="ivr-tab">
                        <form enctype="multipart/form-data" method="post" action="/create/ivr"
                              data-cnf-title="Start Campaign"
                              data-cnf-text="Are you sure that you want to start a new campaign?">
                            <div class="form-group row">
                                <label for="ivrId" class="col-sm-1 col-form-label">IVR ID</label>
                                <div class="col-sm-5">
                                <input type="text" class="form-control cm-text-box" id="ivrId" name="ivrId"
                                          placeholder="IVR to be played" required>
                                </div>
                                <label for="ivrKey" class="col-sm-1 col-form-label">IVR Key</label>
                                <div class="col-sm-5">
                                <input type="text" class="form-control cm-text-box" id="ivrKey" name="ivrKey"
                                          placeholder="API Key for IVR provider" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="ivrFile" class="col-sm-2 col-form-label">Recipients List</label>
                                <div class="col-sm-4">
                                    <input type="file" class="form-control-file" id="ivrFile" name="ivrFile" required>
                                </div>
                                <label for="ivrSender" class="col-sm-2 col-form-label">Sender</label>
                                <div class="col-sm-4">
                                    <input type="text" name="ivrSender" class="form-control" id="ivrSender" required>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row cm-first-row">
            <div class="col">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th scope="col">Campaign</th>
                        <th scope="col">Type</th>
                        <th scope="col">State</th>
                        <th scope="col">Total Items</th>
                        <th scope="col">Completed</th>
                        <th scope="col">Successful</th>
                        <th scope="col">Failed</th>
                        <th scope="col">Created</th>
                        <th scope="col">Last Updated</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each campaigns}}
                        <tr>
                            <td><a href="/campaign/{{campaignId}}">{{name}}</a></td>
                            <td>{{notificationType}}</td>
                            <td>{{state}}</td>
                            <td>{{itemCount}}</td>
                            <td>{{completed}}</td>
                            <td>{{success}}</td>
                            <td>{{failures}}</td>
                            <td>{{created}}</td>
                            <td>{{updated}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{{/partial}}


{{> templates/base}}